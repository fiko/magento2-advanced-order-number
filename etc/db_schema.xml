<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="fiko_aon_counter" resource="default" engine="innodb" comment="Fiko Advanced Order Number Counter">
        <column xsi:type="varchar" name="scope" nullable="false" length="8" default="default" comment="Counter Scope"/>
        <column xsi:type="int" name="scope_id" unsigned="false" nullable="false" default="0"
                comment="Counter Scope ID"/>
        <column xsi:type="int" name="number" unsigned="true" nullable="false" default="1"
                comment="Counter Number" />
        <constraint xsi:type="unique" referenceId="FIKO_AON_COUNTER_SCOPE_SCOPE_ID">
            <column name="scope"/>
            <column name="scope_id"/>
        </constraint>
    </table>
</schema>
